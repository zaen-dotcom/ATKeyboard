<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#EBEDF0"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:paddingBottom="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EBEDF0"
        android:orientation="horizontal"
        android:paddingHorizontal="12dp"
        android:paddingVertical="8dp"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/btnToggleAutoText"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/bg_key_normal"
            android:backgroundTint="#D2E3FC"
            android:text="ðŸš€  Auto Text"
            android:textAllCaps="false"
            android:textColor="#1A73E8"
            android:textSize="13sp"
            android:textStyle="bold" />

    </LinearLayout>

    <ViewFlipper
        android:id="@+id/viewFlipper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/layoutQwerty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="4dp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="250dp">

            <LinearLayout
                android:id="@+id/layoutAutoTextList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="12dp"
                android:paddingBottom="12dp" />
        </ScrollView>

    </ViewFlipper>
</LinearLayout>